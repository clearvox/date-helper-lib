{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "outDir": "dist/src",
    "module": "umd",
    "target": "es2018",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2018"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}